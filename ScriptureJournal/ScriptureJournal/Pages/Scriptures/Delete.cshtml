@page "{id:int?}"
@model ScriptureJournal.Pages.Scriptures.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Scripture Journal</title>
</head>
<body>

    <h3>Are you sure you want to delete this scripture?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Scripture.Book)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Scripture.Book)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Scripture.Chapter)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Scripture.Chapter)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Scripture.Verse)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Scripture.Verse)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Scripture.Note)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Scripture.Note)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Scripture.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Scripture.Date)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Scripture.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</body>
</html>
