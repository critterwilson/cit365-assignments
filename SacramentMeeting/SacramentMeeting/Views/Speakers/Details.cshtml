@model SacramentMeeting.Models.Speaker

@{
    ViewData["Title"] = "Details";
}

<h1>Speaker Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Member)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Member.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting.MeetingIdentifier)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Meetings" asp-action="Details" asp-route-id="@Model.MeetingID">
                @Html.DisplayFor(model => model.Meeting.MeetingIdentifier)
            </a> 
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Speakers</a> |
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
</div>
