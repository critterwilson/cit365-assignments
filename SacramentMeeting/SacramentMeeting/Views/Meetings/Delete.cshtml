@model SacramentMeeting.Models.Meeting

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Meeting</h1>

<h4>Are you sure you want to delete this meeting?</h4>
<h4>(@Model.MeetingIdentifier)</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Meeting Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MeetingDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Conducting)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Conducting.FirstName)
        </dd class>
        <dt class = "col-sm-2">
            Opening Hymn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OpeningHymn.ID)
        </dd class>
        <dt class = "col-sm-2">
            Opening Prayer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OpeningPrayer.FirstName)
        </dd class>
        <dt class = "col-sm-2">
            Sacrament Hymn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SacramentHymn.ID)
        </dd class>
        <dt class = "col-sm-2">
            Intermediate Hymn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IntermediateHymn.ID)
        </dd class>
        <dt class = "col-sm-2">
            Closing Hymn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClosingHymn.ID)
        </dd class>
        <dt class = "col-sm-2">
            Closing Prayer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClosingPrayer.FirstName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Meetings</a>
    </form>
</div>
