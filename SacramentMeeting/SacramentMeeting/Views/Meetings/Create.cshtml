@model SacramentMeeting.Models.Meeting

@{
    ViewData["Title"] = "Create";
}

<h1>Create a Meeting</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Meeting Date</label>
                <input asp-for="MeetingDate" class="form-control" />
                <span asp-validation-for="MeetingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConductingID" class="control-label"></label>
                <select asp-for="ConductingID" class="form-control" asp-items="ViewBag.ConductingID">
                    <option value="">Select Member</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="OpeningHymnID" class="control-label"></label>
                <select asp-for="OpeningHymnID" class="form-control" asp-items="ViewBag.OpeningHymnID">
                    <option value="">Select Hymn</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="OpeningPrayerID" class="control-label"></label>
                <select asp-for="OpeningPrayerID" class="form-control" asp-items="ViewBag.OpeningPrayerID">
                    <option value="">Select Member</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SacramentHymnID" class="control-label"></label>
                <select asp-for="SacramentHymnID" class ="form-control" asp-items="ViewBag.SacramentHymnID">
                    <option value="">Select Hymn</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IntermediateHymnID" class="control-label"></label>
                <select asp-for="IntermediateHymnID" class ="form-control" asp-items="ViewBag.IntermediateHymnID">
                    <option value="">None</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ClosingHymnID" class="control-label"></label>
                <select asp-for="ClosingHymnID" class="form-control" asp-items="ViewBag.ClosingHymnID">
                    <option value="">Select Hymn</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ClosingPrayerID" class="control-label"></label>
                <select asp-for="ClosingPrayerID" class="form-control" asp-items="ViewBag.ClosingPrayerID">
                    <option value="">Select Member</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Meetings</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
